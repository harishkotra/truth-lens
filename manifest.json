{
  "manifest_version": 3,
  "name": "TruthLens - Decentralized Fact Checker",
  "version": "1.0",
  "description": "Verify claims on the web using the OriginTrail Decentralized Knowledge Graph.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8900/*",
    "http://localhost:9200/*",
    "http://localhost:8081/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TruthLens"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}